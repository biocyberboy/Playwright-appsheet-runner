{
  "name": "playwright-typescript-sample",
  "version": "0.1.0",
  "private": true,
  "description": "Minimal Playwright + TypeScript automation testing sample",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "codegen": "playwright codegen https://playwright.dev",
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "api": "node api/server.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}
